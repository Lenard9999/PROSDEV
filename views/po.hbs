    <style type="text/css">
        @media print {
            .hidden-print {
                visibility: hidden;
            }

            #currencyChange {
                position: absolute;
                left: 400px;
                top: 13px;
                width: 100px;
                visibility: visible;
                text-shadow: none;
            }

            #exchangeDisplay {
                background-color: #dc3545;
                border-color: #dc3545;
            }

            :placeholder-shown {
                color: transparent;
            }

            body {
                height: auto;
